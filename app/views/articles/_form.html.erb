
<div class="container-fluid post-form">

  <%= form_for @article do |f| %>

    <div class="row">
      <div class="col-md-7 col-md-offset-1">
         
              <%= render :partial=>'error', :locals=> { :error=>f } %>

        <div class="form-group">
          <label>Photos</label> 
          <div class="row photo-uploads">

            <div class="col-md-3">
              <div class="panel panel-default text-center">
                <div class="panel-body">
                  <label for="post_photo_1">
                    <img src="<%=image_url('add_photo_icon.png')%>" class="photo-placeholder">
                    Photo 1
                    <input type="file" id="post_photo_1"></input>
                  </label>
                </div>
              </div>
            </div>

            <div class="col-md-3">
              <div class="panel panel-default text-center">
                <label for="post_photo_2">
                  <img src="<%=image_url('add_photo_icon.png')%>" class="photo-placeholder">
                  Photo 2
                  <input type="file" id="post_photo_2"></input>
                </label>
              </div>
            </div>

            <div class="col-md-3">
              <div class="panel panel-default text-center">
                <label for="post_photo_3">
                  <img src="<%=image_url('add_photo_icon.png')%>" class="photo-placeholder">
                  Photo 3
                  <input type="file" id="post_photo_3"></input>
                </label>
              </div>
            </div>

            <div class="col-md-3">
              <div class="panel panel-default text-center">
                <label for="post_photo_3">
                  <img src="<%=image_url('add_photo_icon.png')%>" class="photo-placeholder">
                  Photo 4
                  <input type="file" id="post_photo_4"></input>
                </label>
              </div>
            </div>
          </div>
        </div>

        <div class="form-group">
         <%= f.label :title %>
         <%= f.text_field :title, :class=>'form-control' %>
        </div>

        <div class="form-group">
          <%= f.label :content %>
          <%= f.text_area :content, :class=>'form-control', :rows=>10 %>

          </div>

        <div class="form-group">
          <div class="pull-left">
            
            
            <% if not @article.new_record? %>
            <!-- below are equivalent to above
            <%# unless @article.new_record? %>
            <%# if ! @article.new_record? %> 
            <%# if @article.persisted? %> -->

              <%= link_to 'Delete', article_path(@article), :method=>:delete, :data => { :confirm => 'Are you sure?' } %>
              
            <% end %>

          </div>

          <div class="pull-right">
            <div class="pull-left">
              <a href="#">Cancel</a>
            </div>
            <%= f.submit 'Submit', :class=>'btn btn-primary' %>
          </div>
        </div>
      </div>

      <div class="col-md-3">
        
        <label>Category</label>

        <%= f.radio_button :category, 'tech' %>

        <%= f.label :category_tech, :class=>'post-category' do %>
        <img src="<%=image_url('cat_tech.png')%>" class="img-responsive">
        <% end %>

        <%= f.radio_button :category, 'finance' %>
        
        <%= f.label :category_finance, :class=>'post-category' do %>
          <img src="<%=image_url('cat_finance.png')%>" class="img-responsive">
        <% end %>

        <%= f.radio_button :category, 'art' %>
        
         <%= f.label :category_art, :class=>'post-category' do %>
          <img src="<%=image_url('cat_art.png')%>" class="img-responsive">
        <% end %>

        <%= f.radio_button :category, 'music' %>

         <%= f.label :category_music, :class=>'post-category' do %>
          <img src="<%=image_url('cat_music.png')%>" class="img-responsive">
        <% end %>

        <%= f.radio_button :category, 'food' %>
        
         <%= f.label :category_food, :class=>'post-category' do %>
          <img src="<%=image_url('cat_food.png')%>" class="img-responsive">
        <% end %>

        <%= f.radio_button :category, 'culture' %>
        
        <%= f.label :category_culture, :class=>'post-category' do %>
          <img src="<%=image_url('cat_culture.png')%>" class="img-responsive">
        <% end %>


      </div>
    </div>

  <% end %>

</div>
