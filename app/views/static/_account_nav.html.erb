<div class="row account_nav">
  <div class="col-md-4">
    <p>
      Welcome, new to Daft?
      <a href="#">Subscribe Now</a>
    </p>
  </div>

  <div class="col-md-6 col-md-offset-2">

    <% if is_signed_in? %>
      <div class= 'pull-right'>
        <%= link_to 'Create Article', new_article_path, :class=>'btn btn-default' %> 
        <%= link_to 'Sign out', sessions_path, method: :delete, :class=> 'btn btn-primary' %>
      </div>
    
    <% else %>  
      <%= form_tag sessions_path, :class=>'form-inline pull-right' do %>
   
      <%= text_field_tag :email, 'Username', :class=>'form-control' %>

      <%= text_field_tag :password, 'Password', :class=>'form-control' %> 

      <%= submit_tag 'Sign In', :class=>'btn btn-primary' %>

       <% end %>
    <% end %>

  </div>
</div> <!-- Account Nav -->
