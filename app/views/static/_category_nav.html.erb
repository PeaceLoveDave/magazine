<div class="row category_nav">
  <div class="col-md-2 logo">
    <%= link_to root_path do %>
      <img src="<%= image_url "daft_logo.png" %>" class="img-responsive"/>
    <% end %>
  </div>

  <div class="col-md-8 col-md-offset-1">
    
    <div class="row category-list <%= @article.try(:category) %>">

      <div class="col-md-2 category-item category-tech">
        <%= link_to( image_tag("nav_tech.png"), 'tech') %> 
      </div>
      
      <div class="col-md-2 category-item category-finance">
       <%= link_to( image_tag("nav_finance.png"), 'finance') %>
      </div>
      
      <div class="col-md-2 category-item category-art">
       <%= link_to( image_tag("nav_art.png"), 'art') %>
      </div>
      
      <div class="col-md-2 category-item category-music">
        <%= link_to( image_tag("nav_music.png"), 'music') %>
      </div>
      
      <div class="col-md-2 category-item category-food">
        <%= link_to( image_tag("nav_food.png"), 'food') %>
      </div>
      
      <div class="col-md-2 category-item category-culture">
       <%= link_to( image_tag("nav_culture.png"), 'culture') %>
      </div>
      
    </div>
    

  </div>

</div> <!-- category_nav -->

<div class="category-nav-stripes row"></div>
